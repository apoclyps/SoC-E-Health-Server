<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>E-Health - Welcome</display-name>
	<welcome-file-list>
		<welcome-file>FeedsController</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>FeedsController</servlet-name>
		<servlet-class>uk.co.kyleharrison.ehealth.controller.rest.RequestController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FeedsController</servlet-name>
		<url-pattern>/feeds</url-pattern>
		<url-pattern>/feeds/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PushController</servlet-name>
		<servlet-class>uk.co.euanmorrison.ehealth.push.PushController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PushController</servlet-name>
		<url-pattern>/PushController</url-pattern>
		<url-pattern>/PushController/*</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/EHealth/Error/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/EHealth/Error/error.jsp</location>
	</error-page>

</web-app>